<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:weightSum="10"
    android:layout_marginBottom="70dp"
    tools:context=".UDSFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/uds_back_arrrow"
                    android:layout_width="55dp"
                    android:layout_height="39dp"

                    android:layout_gravity="left"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/back_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/uds_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="490dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/uds1"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_r1"
                android:id="@+id/btn_r1"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_c1"
                android:id="@+id/btn_c1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="406dp"
                android:src="@drawable/uds2"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_r_inven"
                android:id="@+id/btn_r_inven"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="37dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_inv"
                android:id="@+id/btn_inv"/>
            <ImageView
                android:layout_width="310dp"
                android:layout_height="37dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_diagnostico"
                android:id="@+id/btn_diagnostico"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="373dp"
                android:src="@drawable/uds3"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_adopta"
                android:id="@+id/btn_adopta"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_guia"
                android:id="@+id/btn_guia"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="319dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/uds4"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_reglamento"
                android:id="@+id/btn_reglamento"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_ley"
                android:id="@+id/btn_ley"/>




        </LinearLayout>
    </ScrollView>
</LinearLayout>